<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts/show.css" />
<%- include('../partials/nav') %>

<main>
  <section>
    <div class="post"><%= post.post %></div>
  </section>

<h2>Comment</h2>
<form 
  id="add-comment-form"
  action="/posts/<%= post._id %>/comments"
  method="POST"
>
  <!-- <label for="post-textarea">Comment:</label> -->
  <ul><li></li><textarea type= "text" name="comment" id="post-textarea" cols="85" rows="5" maxlength="150"></textarea></li></ul>
  <label for="reaction-select">Reaction:</label>
  <select name="reaction" id="reaction-select">
    <option value="👍">👍</option>
    <option value="💚">💚</option>
    <option value="🤣">🤣</option>
    <option value="😱">😱</option>
    <option value="🤮">🤮</option>
  </select>
  <button type="submit">talk</button>
</form>
<ul>
<% post.comments.forEach(function(comment) { %>
    <li class="post"><%= comment.comment %></li>
    <div ><%= comment.createdAt.toLocaleDateString() %></div>
    <div><%= comment.reaction %></div>

    <% if (user) { %>
    <a href="/posts/<%= post._id %>/comments/<%= comment._id %>/edit"><button class="btn">Edit Comment</button></a>
    <form action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST"><button class="delete-btn">Delete</button></form>
    <% } %>

  <% }) %>
</ul>


</main>
  
<%- include('../partials/footer') %>